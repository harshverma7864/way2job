<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    tools:context=".CardsInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp">

        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="100dp"
            android:layout_margin="14dp"
            android:background="@color/black">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/nsflogo"
                android:padding="7dp"
                />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/companyName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textStyle="bold|normal"
            android:text="Nucleus Software Exports Ltd."
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imageRecycler"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/teal_700"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Drive Type  :"
            android:textSize="16sp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/driveType"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:text="1679"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/teal_700"
            android:layout_weight="1"
            android:text="Role Offered  :"
            android:textSize="16sp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/role"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:text="ASE"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="CTC Offered  :"
            android:textColor="@color/teal_700"

            android:textSize="16sp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/ctc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:text="4.33 lpa"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Location  :"
            android:textColor="@color/teal_700"
            android:textSize="16sp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:text="Noida"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Company type  :"
            android:textSize="16sp"
            android:textColor="@color/teal_700"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/companyType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:text="Product Based"/>
    </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
            android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="College Name  :"
            android:textColor="@color/teal_700"

            android:textSize="16sp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/colName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:text="Axis Institute of Technology and Management"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Interview Rounds"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rounds"
            android:layout_width="match_parent"
            android:layout_height="100dp" />


        <TextView
            android:id="@+id/eligibility"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="25dp"
            android:text="Eligibility Criteria ?"
            android:textSize="16sp"
            android:textStyle="bold|normal"
            android:textColor="@color/teal_700"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>