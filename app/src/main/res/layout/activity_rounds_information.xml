<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoundsInformation"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="40dp"

        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">
        <TextView
            android:textColor="#015A5A"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Round 1"
            android:padding="6dp"

            android:textSize="20sp"
            android:gravity="center_vertical"
            android:textStyle="bold|normal"/>
    </androidx.cardview.widget.CardView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="#EFFAFA">

    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="match_parent"
        >
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Technical Test"
            android:textColor="@color/teal_700"

            android:padding="8dp"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:textStyle="bold|normal"/>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Duration : 90 min"
            android:textColor="@color/teal_700"

            android:padding="6dp"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:textStyle="bold|normal"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="#EFFAFA"

    >

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="match_parent"
        >
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="No of Questions : 30"
            android:textColor="@color/teal_700"

            android:padding="8dp"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:textStyle="bold|normal"/>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Mode : Online"
            android:textColor="@color/teal_700"

            android:padding="6dp"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:textStyle="bold|normal"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/questionAnswer"/>

</LinearLayout>
